{\n  "manifest_version": 3,\n  "name": "WC EAN Manager - Extension",\n  "version": "1.0.0",\n  "description": "Recherchez et g√©rez vos produits WooCommerce par EAN depuis n'importe quelle page web",\n  "author": "vasikanth94",\n  \n  "permissions": [\n    "storage",\n    "activeTab",\n    "contextMenus",\n    "notifications"\n  ],\n  \n  "host_permissions": [\n    "<all_urls>"\n  ],\n  \n  "action": {\n    "default_popup": "popup/popup.html",\n    "default_icon": {\n      "16": "icons/icon16.png",\n      "48": "icons/icon48.png",\n      "128": "icons/icon128.png"\n    }\n  },\n  \n  "background": {\n    "service_worker": "background/service-worker.js"\n  },\n  \n  "content_scripts": [\n    {\n      "matches": ["<all_urls>"],\n      "js": ["content/content.js"],\n      "css": ["content/content.css"]\n    }\n  ],\n  \n  "icons": {\n    "16": "icons/icon16.png",\n    "48": "icons/icon48.png",\n    "128": "icons/icon128.png"\n  },\n  \n  "options_page": "options/options.html",\n  \n  "commands": {\n    "open-scanner": {\n      "suggested_key": {\n        "default": "Ctrl+Shift+E"\n      },\n      "description": "Ouvrir le scanner de code-barres"\n    },\n    "quick-search": {\n      "suggested_key": {\n        "default": "Ctrl+Shift+S"\n      },\n      "description": "Recherche rapide"\n    }\n  }\n}